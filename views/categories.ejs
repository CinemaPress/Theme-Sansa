<!DOCTYPE html>
<html lang="ru">
<head>

    <% include includes/head.ejs %>

</head>
<body>

<% include includes/header.ejs %>

<div id="content">

    <div class="left">

        <% include includes/left.ejs %>

    </div>

    <div class="right">

        <div class="speedbar">
            <span id="cinemapress-speedbar">
                <a href="/">Главная</a> &#9658;
                <%- page.title %>
            </span>
        </div>

        <% if (typeof page.adv == 'object' && page.adv.top) { %>
        <div style="clear: both;"></div>
        <div style="text-align: center; margin: 10px auto">
            <%- page.adv.top %>
        </div>
        <div style="clear: both;"></div>
        <% } %>

        <div class="category-name_2 category-name_2_podb">
            <h1><%- page.title %></h1>
        </div>

        <% if (typeof categories == 'object' && categories.length) { %>

        <div id="cinemapress-content">
            <div class="podborki_cat_2">

                <% categories.forEach(function (category) { %>

                <div class="podborki_cat_item">
                    <div class="podborki_cat_item_photo">
                        <a href="<%- category.url %>" rel="nofollow">
                            <img src="<% if (category.image) { %> <%- category.image %> <% } else { %>https://st.kp.yandex.net/images/kadr/sm_2136182.jpg<% } %>" alt="<%- category.name %>"></a>
                    </div>
                    <div class="podborki_cat_item_title"><a href="<%- category.url %>"><%- category.name %></a></div>
                </div>

                <% }); %>

            </div>
        </div>

        <% } %>

        <% if (typeof page.adv == 'object' && page.adv.bottom) { %>
        <div style="clear: both;"></div>
        <div style="text-align: center; margin: 10px auto">
            <%- page.adv.bottom %>
        </div>
        <div style="clear: both;"></div>
        <% } %>

        <% if (page.seo) { %>

        <div style="clear: both;"></div>

        <div class="main-info">
            ﻿
            <div class="page_seo">
                <%- page.seo %>
            </div>

        </div>

        <div style="clear: both;"></div>

        <% } %>

        <div class="main-info recentlyViewedBlock" style="margin: 20px 0 0 0; display: none;">

            <div>Вы надавно смотрели:</div>
            <div id="recentlyViewed"></div>

        </div>

    </div>

    <div style="clear: both;"></div>

</div>


<div id="footer">

    <% include includes/footer.ejs %>

</div>

</body>
</html>